{
  "workspace": ["panther"],
  "fmt": {
    "exclude": ["client/"]
  },
  "lint": {
    "exclude": ["client/"],
    "rules": {
      "exclude": ["jsx-key"]
    }
  },
  "test": {
    "exclude": ["client/"]
  },
  "imports": {
    "@timroberton/panther": "./panther/mod.deno.ts",
    "lib": "./lib/mod.ts",
    "@anthropic-ai/sdk": "npm:@anthropic-ai/sdk@^0.71.0",
    "@clerk/backend": "npm:@clerk/backend@^1.25.2",
    "@hono/clerk-auth": "npm:@hono/clerk-auth@^2.0.0",
    "@std/async": "jsr:@std/async@^1.0.9",
    "@std/fs": "jsr:@std/fs@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/streams": "jsr:@std/streams@^1.0.8",
    "@types/papaparse": "npm:@types/papaparse@^5.3.15",
    "csv": "jsr:@std/csv@1.0.3",
    "hono": "jsr:@hono/hono@^4.5.3",
    "nanoid": "npm:nanoid@^5.0.0",
    "papaparse": "npm:papaparse@^5.5.2",
    "parse-multipart": "npm:parse-multipart@^1.0.4",
    "postgres": "npm:postgres@^3.4.5",
    "redis": "npm:redis@^4.7.0",
    "zod": "npm:zod@^3.22.4"
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx",
    "lib": ["esnext", "dom", "dom.iterable", "deno.ns"]
  },
  "tasks": {
    "dev": "deno task build:modules && deno run --allow-all --env-file --unstable-broadcast-channel main.ts",
    "build:client": "cd client && npm run build",
    "build:server": "deno task build:modules && deno task build:translations",
    "build:modules": "deno run --allow-read --allow-write --allow-env --allow-net --env-file --unstable-raw-imports build_module_definitions.ts",
    "build:translations": "deno run --allow-read --allow-write --allow-env --allow-ffi --env-file build_translations.ts",
    "typecheck": "deno check main.ts && echo '✓ Server typecheck passed' && sh -c 'cd client && npm run typecheck' && echo '✓ Client typecheck passed\n\n'",
    "check": "deno check main.ts",
    "check:all": "deno check main.ts server/**/*.ts",
    "compile": "deno compile --allow-all --env-file --output=wb-fastr-server main.ts",
    "start": "deno run --allow-all --env-file main.ts",
    "lint": "deno lint",
    "fmt": "deno fmt"
  }
}
