{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["vite/client"],
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "panther": ["../panther/mod.ui.ts"],
      "@timroberton/panther": ["../panther/mod.ui.ts"],
      "lib": ["../lib/mod.ts"],
      "solid-js": ["./node_modules/solid-js"],
      "solid-js/*": ["./node_modules/solid-js/*"],
      "@solidjs/router": ["./node_modules/@solidjs/router"],
      "sortablejs/*": ["./node_modules/sortablejs/*"],
      "markdown-it": ["./node_modules/markdown-it"],
      "jspdf": ["./node_modules/jspdf"],
      "docx": ["./node_modules/docx"],
      "papaparse": ["./node_modules/papaparse"],
      "zod": ["./node_modules/zod"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
