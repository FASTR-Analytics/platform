{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["vite/client"],
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "panther": ["../panther/mod.ui.ts"],
      "@timroberton/panther": ["../panther/mod.ui.ts"],
      "lib": ["../lib/mod.ts"],
      "solid-js": ["./node_modules/solid-js"],
      "solid-js/*": ["./node_modules/solid-js/*"],
      "@solidjs/router": ["./node_modules/@solidjs/router"],
      "sortablejs/*": ["./node_modules/sortablejs/*"],
      "markdown-it": ["./node_modules/@types/markdown-it", "./node_modules/markdown-it"],
      "jspdf": ["./node_modules/jspdf"],
      "docx": ["./node_modules/docx"],
      "papaparse": ["./node_modules/@types/papaparse", "./node_modules/papaparse"],
      "zod": ["./node_modules/zod"],
      "@anthropic-ai/sdk": ["./node_modules/@anthropic-ai/sdk"],
      "@vscode/markdown-it-katex": ["./node_modules/@vscode/markdown-it-katex"],
      "codemirror": ["./node_modules/codemirror"],
      "@codemirror/state": ["./node_modules/@codemirror/state"],
      "@codemirror/lang-markdown": ["./node_modules/@codemirror/lang-markdown"],
      "@codemirror/merge": ["./node_modules/@codemirror/merge"],
      "pptxgenjs": ["./node_modules/pptxgenjs"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
